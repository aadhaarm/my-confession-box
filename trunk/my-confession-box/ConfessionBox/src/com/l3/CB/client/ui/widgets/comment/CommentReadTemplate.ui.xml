<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.handPointer {
			cursor: pointer;
		}
		
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<p class="uk-article-meta uk-width-1-1">
			<g:Image ui:field="imgProfile" height="35px" width="35px" />
			<g:Anchor ui:field='nameSpan'></g:Anchor>
			commented,
			<span ui:field='timeStamp' />
		</p>

		<p>
			<span ui:field='strComment' />
			<g:Anchor ui:field="ancMore" styleName="{style.handPointer}">More</g:Anchor>
		</p>
		<p>
			<g:Button ui:field="btnSecond"
				styleName="uk-button uk-button-primary uk-button-small" title="I Like your comment!">Like</g:Button>
			<span ui:field='numOfSecond' />

			<g:Button ui:field="btnDislike" styleName="uk-button uk-button-small"
				title="I don't like your Comment!">Dislike</g:Button>
			<span ui:field='numOfDislike' />
		</p>

		<hr ui:field="hr" class="uk-grid-divider" />

	</g:HTMLPanel>
</ui:UiBinder> 