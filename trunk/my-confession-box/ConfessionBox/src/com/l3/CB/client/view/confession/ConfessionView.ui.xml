<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:comment="urn:import:com.l3.CB.client.ui.widgets.comment">
	<ui:style>
		.handPointer {
			cursor: pointer;
		}
		
		.profileImage {
			float: left;
			width: 75px;
			height: 75px;
			margin-right: 15px;
		}
	</ui:style>
	<g:HTMLPanel ui:field="mainDiv" styleName="uk-grid tm-leading-article">
		<div class="uk-width-1-1">
			<article class="uk-article">

				<h1 class="uk-article-title">
					<g:Image ui:field="imgProfileImage" styleName="{style.profileImage}" />
					<g:Anchor ui:field="ancConfessionTitle" styleName="{style.handPointer}"></g:Anchor>
				</h1>

				<p class="uk-article-meta">
					Written by
					<g:Anchor ui:field="ancUserName" styleName="{style.handPointer}" />
					,
					<time pubdate="">
						<span ui:field="spanDateTile" />
						<button ui:field="badgePardonStatus" class="uk-badge uk-badge-large" data-uk-tooltip="" style="float:right;"/>
					</time>
					.
				</p>

				<p>
					<g:HTML ui:field="htmlConfessionText"></g:HTML>
				</p>

				<p>
					<g:Anchor ui:field="ancMore" styleName="{style.handPointer}">Continue Reading</g:Anchor>
				</p>

				<p>
					<g:Button ui:field="btnSameBoat" styleName="uk-button uk-button-large"
						title="I am in the Same Boat!">
						Same Boat
						<span ui:field="spanSameBoatNum" class="uk-badge uk-badge-notification" />
					</g:Button>

					<g:Button ui:field="btnSympathy" styleName="uk-button uk-button-large"
						title="I sypathies with you!">
						Sympathies
						<span ui:field="spanSympathyNum" class="uk-badge uk-badge-notification" />
					</g:Button>

					<g:Button ui:field="btnLame" styleName="uk-button uk-button-large"
						title="Go get a life!">
						Lame
						<span ui:field="spanLameNum" class="uk-badge uk-badge-notification" />
					</g:Button>

					<g:Button ui:field="btnShudBePar" styleName="uk-button uk-button-large"
						title="You should be Pardoned.">
						It's OK
						<span ui:field="spanShudBeParNum" class="uk-badge uk-badge-notification" />
					</g:Button>

					<g:Button ui:field="btnShudNtBePar" styleName="uk-button uk-button-large"
						title="You should not be Pardoned.">
						Not OK
						<span ui:field="spanShudNtBeParNum" class="uk-badge uk-badge-notification" />
					</g:Button>

					<g:Button ui:field="btnRepAbuse" styleName="uk-button uk-button-large"
						title="Report Abuse!">
						Report Abuse
						<span ui:field="spanRepAbuseNum" class="uk-badge uk-badge-notification" />
					</g:Button>
				</p>

				<div>
					<comment:AddCommentTemplate ui:field="addCommentWidget" />
					<comment:CommentListTemplate ui:field="commentList" />
				</div>

			</article>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 